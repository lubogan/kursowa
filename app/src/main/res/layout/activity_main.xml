<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.lasttry.MainActivity"
    android:background="@drawable/background2">

    <ImageButton
        android:text="прасе"
        android:src="@drawable/pig_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_pig"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:text="тигър"
        android:src="@drawable/tiger_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_tiger"
        android:layout_above="@+id/play_horse"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_cat"
        android:text="коте"
        android:src="@drawable/cat_opt"
        android:background="@android:drawable/dialog_frame"
        android:adjustViewBounds="false"
        android:layout_below="@+id/play_tiger"
        android:layout_alignLeft="@+id/play_tiger"
        android:layout_alignStart="@+id/play_tiger" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_dog"
        android:src="@drawable/dog_opt"
        android:background="@android:drawable/dialog_frame"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:text="куче"
        android:layout_below="@+id/play_cat"
        android:layout_alignLeft="@+id/play_cat"
        android:layout_alignStart="@+id/play_cat" />

    <ImageButton
        android:text="Камила"
        android:src="@drawable/camel_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_camel"
        android:layout_below="@+id/play_dog"
        android:layout_alignLeft="@+id/play_dog"
        android:layout_alignStart="@+id/play_dog" />

    <ImageButton
        android:text="Слон"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/elephant_opt"
        android:id="@+id/play_elephant"
        android:layout_below="@+id/play_pig"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
            android:text="лъв"
            android:src="@drawable/lion_opt"
            android:background="@android:drawable/dialog_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_lion"
        android:layout_below="@+id/play_camel"
        android:layout_alignLeft="@+id/play_camel"
        android:layout_alignStart="@+id/play_camel" />

    <ImageButton
        android:text="Мечка"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_frame"
        android:id="@+id/play_bear"
        android:src="@drawable/bear_opt"
        android:layout_below="@+id/play_camel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:text="коза"
        android:src="@drawable/goat_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_goat"
        android:layout_below="@+id/play_elephant"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:text="Тюлен"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/seal_opt"
        android:id="@+id/play_seal"
        android:layout_above="@+id/play_pig"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:text="Делфин"
        android:src="@drawable/dolphin_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_dolphin"
        android:layout_above="@+id/play_seal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ВЪЛК"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/play_horse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.DropDownItem" />

    <TextView
        android:text="ВЪЛК"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/play_horse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.DropDownItem" />

    <TextView
        android:text="ВЪЛК"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_above="@+id/play_horse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:text="ДЕЛФИН"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:text="Тигър"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_above="@+id/play_seal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="КОН"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_horse"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="КОТКА"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_dog"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <ImageButton
        android:text="Вълк"
        android:src="@drawable/wolf_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_wolf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView" />

    <ImageButton
        android:text="кон"
        android:src="@drawable/horse_opt"
        android:background="@android:drawable/dialog_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_horse"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ТЮЛЕН"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="КУЧЕ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_camel"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:text="ПРАСЕ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="КАМИЛА"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_lion"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView11"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:text="СЛОН"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:id="@+id/textView12"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="МЕЧКА"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_bear"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:text="ЛЪВ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_lion"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />

    <TextView
        android:text="КОЗЕЛ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:id="@+id/textView15"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

</RelativeLayout>
